<p id="notice"><%= notice %></p>
<div class="state-container">
<h1>States</h1>

<table class="table">
  <thead>
    <tr>
      <th>State name</th>
      <th>Country</th>
       <th>Like</th>
        <th>disLike</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @states.each do |state| %>
      <tr>
        <td><%= state.state_name %></td>
        <td><%= state.country_id %></td>
         <div class="col-md-6">
          <div class="btn-group pull-right" style="">
         <td><%= link_to like_state_path(state), method: :put ,data: { :remote=> true } , :class=> "btn btn-default" do %>
          <span class="glyphicon glyphicon-thumbs-up state-up-<%=state.id%>" style='width: 50px' >
             <%= state.get_upvotes.size %> <% end %></td>
          </span>

          <td><%= link_to dislike_state_path(state), method: :put ,data: { :remote=> true } , :class=> "btn btn-default" do %>
          <span class="glyphicon glyphicon-thumbs-down state-down-<%=state.id%>" style='width: 50px'>
           <%= state.get_downvotes.size %><% end %></td>
          </span>
      </div>
    </div>



         
        <td><%= link_to 'Show',  show_page_state_path(state),:class=>"btn btn-info",:remote => true, 'data-toggle' =>"modal",'data-target' =>'#myModal' %></td>

        <td><%= link_to 'Edit', edit_state_state_path(state),:class=>"btn btn-warning",:remote => true, 'data-toggle' =>"modal",'data-target' =>'#myModal1' %></td>
        
        <td><%= link_to 'Destroy', state, method: :delete, data: { confirm: 'Are you sure?' },:class=>"btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New State', new_state_path,:class=>"btn btn-success" %>
</div>
<div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog">
     <div class="modal-content">
      <div class="modal-header">
       <button type="button" class="close" data-dismiss="modal">&times;</button>
       <h4 class="modal-title">User Detials Info</h4>
      </div>
      <div class="modal-body">
      </div>
      <div class="modal-footer">
       <button class="btn btn-default" data-dismiss="modal" aria-hidden="true">Close</button>
      </div>
     </div>
    </div>
</div>
 
 <div class="modal fade" id="myModal1" role="dialog">
    <div class="modal-dialog">
     <div class="modal-content">
      <div class="modal-header">
       <button type="button" class="close" data-dismiss="modal">&times;</button>
       <h4 class="modal-title"> update User Info</h4>
      </div>
      <div class="modal-body">
      </div>
      <div class="modal-footer">
       <button class="btn btn-default" data-dismiss="modal" aria-hidden="true">Close</button>
      </div>
     </div>
    </div>
</div>

