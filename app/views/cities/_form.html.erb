
<%= form_for city,:html=>{:class=>"form-horizontal"} do |f| %>
  <% if city.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(city.errors.count, "error") %> prohibited this cityfrom being saved:</h2>

      <ul>
      <% city.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  

  <div class="form-group">
        <label class="col-md-4 control-label">Name</label>
        <div class="col-md-6  inputGroupContainer">
          <div class="input-group"> <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
            <%= f.text_field :city_name, :placeholder=>"City_Name", :class=>"form-control" %>
          </div>
        </div>
      </div>
     <div class="form-group">
        <label class="col-md-4 control-label">State</label>
      <div class="col-md-6  inputGroupContainer">
          <div class="input-group"> <span class="input-group-addon"><i class="glyphicon glyphicon-th-list"></i></span>
          
       <%=f.select(:state_id, State.all.collect {|u| [u.state_name, u.id]},:prompt => "Select state", :class=>"form-control") %>
      </div>
    </div>
  </div>
  <div class="form-group">
        <label class="col-md-4 control-label"></label>
        <div class="col-md-4">
          <%=f.submit :class=>"btn btn-success" %>
        </div>
      </div>
<% end %>
