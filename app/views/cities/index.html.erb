<div class="container">
<p id="notice"><%= notice %></p>
<div class="city-container">
<h1>Cities</h1>

<table class=" table table-hover">
<div class="table-responsive">
  <thead>
    <tr>
      <th>City name</th>
      <th>State</th>
      <th>Like</th>
      <th>DisLike</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cities.each do |city| %>
      <tr>
        <td><%= city.city_name %></td>
        <td><%= city.state_id %></td>
        <div class="col-md-6">
         <div class="btn-group pull-right" style="">
           <td><%= link_to like_city_path(city), method: :put ,data: { :remote=> true } , :class=> "btn btn-default" do %>
            <span class="glyphicon glyphicon-thumbs-up city-up-<%=city.id%>" style='width: 50px' >
             <%= city.get_upvotes.size %> <% end %></td>
            </span>

           <td><%= link_to dislike_city_path(city), method: :put ,data: { :remote=> true } , :class=> "btn btn-default" do %>
           <span class="glyphicon glyphicon-thumbs-down city-down-<%=city.id%>" style='width: 50px'>
             <%= city.get_downvotes.size %><% end %></td>
           </span>
         </div>
       </div>


        <td><%= link_to 'Show', show_page_city_path(city),:class=>"btn btn-info",:remote => true, 'data-toggle' =>"modal",'data-target' =>'#myModal' %></td>
        <td><%= link_to 'Edit', edit_city_city_path(city),:class=>"btn btn-warning",:remote => true, 'data-toggle' =>"modal",'data-target' =>'#myModal1' %></td>
        <td><%= link_to 'Destroy', city, method: :delete, data: { confirm: 'Are you sure?' },:class=>"btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New City', new_city_path,:class=>"btn btn-success" %>
</div>
</div>

<div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog">
     <div class="modal-content">
      <div class="modal-header">
       <button type="button" class="close" data-dismiss="modal">&times;</button>
       <h4 class="modal-title">City Info</h4>
      </div>
      <div class="modal-body">
      </div>
      <div class="modal-footer">
       <button class="btn btn-default" data-dismiss="modal" aria-hidden="true">Close</button>
      </div>
     </div>
    </div>
</div>
 
 <div class="modal fade" id="myModal1" role="dialog">
    <div class="modal-dialog">
     <div class="modal-content">
      <div class="modal-header">
       <button type="button" class="close" data-dismiss="modal">&times;</button>
       <h4 class="modal-title"> update City Info</h4>
      </div>
      <div class="modal-body">
      </div>
      <div class="modal-footer">
       <button class="btn btn-default" data-dismiss="modal" aria-hidden="true">Close</button>
      </div>
     </div>
    </div>
</div>