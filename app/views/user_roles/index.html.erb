<p id="notice"><%= notice %></p>
<div class="user_role-container">
<h1>User Roles</h1>

<table class="table">
  <thead>
    <tr>
      <th>Role name</th>
      <th>Like</th>
      <th>DisLike</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_roles.each do |user_role| %>
      <tr>
        <td><%= user_role.role_name %></td>

        <div class="col-md-6">
         <div class="btn-group pull-right" style="">
           <td><%= link_to like_user_role_path(user_role), method: :put ,data: { :remote=> true } , :class=> "btn btn-default" do %>
            <span class="glyphicon glyphicon-thumbs-up user_role-up-<%=user_role.id%>" style='width: 50px' >
             <%= user_role.get_upvotes.size %> <% end %></td>
            </span>

           <td><%= link_to dislike_user_role_path(user_role), method: :put ,data: { :remote=> true } , :class=> "btn btn-default" do %>
           <span class="glyphicon glyphicon-thumbs-down user_role-down-<%=user_role.id%>" style='width: 50px'>
             <%= user_role.get_downvotes.size %><% end %></td>
           </span>
         </div>
       </div>

        <td><%= link_to 'Show',  show_page_user_role_path(user_role),:class=>"btn btn-info",:remote => true, 'data-toggle' =>"modal",'data-target' =>'#myModal' %></td> 
        <td><%= link_to 'Edit',edit_user_role_user_role_path(user_role),:class=>"btn btn-warning",:remote => true, 'data-toggle' =>"modal",'data-target' =>'#myModal1' %></td>
        
        <td><%= link_to 'Destroy', user_role, method: :delete, data: { confirm: 'Are you sure?' },:class=>"btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User Role', new_user_role_path,:class=>"btn btn-success" %>
</div>

<div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog">
     <div class="modal-content">
      <div class="modal-header">
       <button type="button" class="close" data-dismiss="modal">&times;</button>
       <h4 class="modal-title">User Role Info</h4>
      </div>
      <div class="modal-body">
      </div>
      <div class="modal-footer">
       <button class="btn btn-default" data-dismiss="modal" aria-hidden="true">Close</button>
      </div>
     </div>
    </div>
</div>
 
 <div class="modal fade" id="myModal1" role="dialog">
    <div class="modal-dialog">
     <div class="modal-content">
      <div class="modal-header">
       <button type="button" class="close" data-dismiss="modal">&times;</button>
       <h4 class="modal-title"> update User Role Info</h4>
      </div>
      <div class="modal-body">
      </div>
      <div class="modal-footer">
       <button class="btn btn-default" data-dismiss="modal" aria-hidden="true">Close</button>
      </div>
     </div>
    </div>
</div>


