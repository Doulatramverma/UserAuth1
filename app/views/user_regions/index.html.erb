<p id="notice"><%= notice %></p>

<h1>User Regions</h1>

<table class="table">
  <thead>
    <tr>
      <th>User</th>
      <th>Region</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_regions.each do |user_region| %>
      <tr> 

        <td><%if user_region.user_id.present? %> 
      <%= User.find(user_region.user_id).first_name %> 
         <% end %> </td>
        <td><%if user_region.region_id.present?%>
  <%= Region.find(user_region.region_id).region_name %>
     <%end%></td>
        <td><%= link_to 'Show', user_region %></td>
        <td><%= link_to 'Edit', edit_user_region_path(user_region) %></td>
        <td><%= link_to 'Destroy', user_region, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User Region', new_user_region_path %>
