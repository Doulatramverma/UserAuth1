<p id="notice"><%= notice %></p>
<div class="user_region-container">
<h1>User Regions</h1>

<table class="table">
  <thead>
    <tr>
      <th>User</th>
      <th>Region</th>
       <th>Like</th>
        <th>Dislike</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_regions.each do |user_region| %>
      <tr> 

        <td><%if user_region.user_id.present? %> 
      <%= User.find(user_region.user_id).first_name %> 
         <% end %> </td>
        <td><%if user_region.region_id.present?%>
  <%= Region.find(user_region.region_id).region_name %>
     <%end%></td>
      <div class="col-md-6">
         <div class="btn-group pull-right" style="">
           <td><%= link_to like_user_region_path(user_region), method: :put ,data: { :remote=> true } , :class=> "btn btn-default" do %>
            <span class="glyphicon glyphicon-thumbs-up user_region-up-<%=user_region.id%>" style='width: 50px' >
             <%= user_region.get_upvotes.size %> <% end %></td>
            </span>

           <td><%= link_to dislike_user_region_path(user_region), method: :put ,data: { :remote=> true } , :class=> "btn btn-default" do %>
           <span class="glyphicon glyphicon-thumbs-down user_region-down-<%=user_region.id%>" style='width: 50px'>
             <%= user_region.get_downvotes.size %><% end %></td>
           </span>
         </div>
       </div>

        <td><%= link_to 'Show',  show_page_user_region_path(user_region),:class=>"btn btn-info",:remote => true, 'data-toggle' =>"modal",'data-target' =>'#myModal' %></td>

        <td><%= link_to 'Edit', edit_user_region_user_region_path(user_region),:class=>"btn btn-warning",:remote => true, 'data-toggle' =>"modal",'data-target' =>'#myModal1' %></td>
        
        <td><%= link_to 'Destroy', user_region, method: :delete, data: { confirm: 'Are you sure?' },:class=>"btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User Region', new_user_region_path %>
</div>
<div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog">
     <div class="modal-content">
      <div class="modal-header">
       <button type="button" class="close" data-dismiss="modal">&times;</button>
       <h4 class="modal-title">User Region Info</h4>
      </div>
      <div class="modal-body">
      </div>
      <div class="modal-footer">
       <button class="btn btn-default" data-dismiss="modal" aria-hidden="true">Close</button>
      </div>
     </div>
    </div>
</div>
 
 <div class="modal fade" id="myModal1" role="dialog">
    <div class="modal-dialog">
     <div class="modal-content">
      <div class="modal-header">
       <button type="button" class="close" data-dismiss="modal">&times;</button>
       <h4 class="modal-title"> update User Region Info</h4>
      </div>
      <div class="modal-body">
      </div>
      <div class="modal-footer">
       <button class="btn btn-default" data-dismiss="modal" aria-hidden="true">Close</button>
      </div>
     </div>
    </div>
</div>


