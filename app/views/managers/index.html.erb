<p id="notice"><%= notice %></p>

<h1>User Details</h1>

<table class="table">
  <thead>
    <tr>
      <th>FirstName</th>
       <th>Lastname</th>
      <th>Email</th>
      <th>Company</th>
      <th>Role</th>
      <th>Startdate</th>
      <th>Enddate</th>
      <th>MonthlyCharge</th>
      
      <th>Notes</th>
      <th>Active</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @managers.each do |manager| %>
      <tr>
        <td><%= manager.first_name %></td>
        <td><%= manager.last_name %></td>
        <td><%= manager.email %></td>
        <td><%if manager.company_id.present? %> 
         <%= Company.find(manager.company_id).name %> 
         <%end %>
         </td>
         <td><%= manager.role_id %></td>
        <td><%= manager.start_date %></td>
        <td><%= manager.end_date %></td>
        <td><%= manager.monthly_charge %></td>
        <td><%= manager.notes%></td>
        <td><%#= manager.image_id%></td>
        <td><%= manager.active %></td>
      <td><%= link_to 'Show',  manager_path(manager),:class=>"btn btn-info" %></td>
          <% if user_permission_admin? %>
          <% elsif  user_check(user, current_user) %>
         <td><%= link_to 'Edit', edit_manager_path(manager),:class=>"btn btn-warning" %></td>
         <td><%= link_to 'Destroy', manager_path(manager), method: :delete, data: { confirm: 'Are you sure?' },:class=>"btn btn-danger" %></td>
        
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Manager', new_manager_path,:class=>"btn btn-success" %>
