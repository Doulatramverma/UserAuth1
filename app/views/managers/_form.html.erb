<div class="container">
<%= form_for @manager ,url:managers_path do |f| %>
  <% if manager.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(manager.errors.count, "error") %> prohibited this manager from being saved:</h2>

      <ul>
      <% manager.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

   <div class="form-group">
    <label class="col-sm-1 control-label">FirstName</label>
    <div class="col-sm-3 inputGroupContainer">
      <%= f.text_field :first_name,:class=>"form-control" %>
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-1 control-label">LastName</label>
    <div class="col-sm-3 inputGroupContainer">
      <%= f.text_field :last_name, :class=>"form-control" %>
   </div>
  </div>
 <div class="form-group">
    <label class="col-sm-1 control-label">Email</label>
    <div class="col-sm-3  inputGroupContainer">
      <%= f.text_field :email, :class=>"form-control" %>
    </div>
  </div>
  <br><br>



      <div class="form-group">
        <label class="col-sm-1 control-label">Company</label>
        <div class="col-sm-7  inputGroupContainer">
           <%=f.select(:company_id, Company.all.collect {|u| [u.name, u.id]},{},:prompt => "Select Company", :class=>"form-control") %>
       </div>
       </div>

        <div class="form-group">
        <label class="col-sm-1 control-label">Monthly</label>
      <div class="col-sm-3  inputGroupContainer">
       <%= f.text_field :monthly_charge, :class=>"form-control" %>
         </div>
          </div>
 <div class="form-group">
    <label class="col-ms-1 control-label">Role</label>
    <div class="col-ms-4  inputGroupContainer">
        
     <%= f.text_field :role_id, :class=>"form-control" %><br>
    </div>
 </div>
 </div>

  <div class="form-group">
    <label class="col-ms-1 control-label">Start_date</label>
    <div class="col-ms-2  inputGroupContainer">
     <%= f.text_field :start_date, :class => 'datepicker' %>

     <%#= f.datetime_select :start_date , :placeholder=>"Start_date", :class=>"form-control" %>
    
    </div>
  </div>
  
  <div class="form-group">
        <label class="col-ms-1 control-label">End_date</label>
      <div class="col-ms-2  inputGroupContainer">
          <%= f.text_field :end_date, :class => 'datepicker' %>

           <%#= f.datetime_select :start_date , :placeholder=>"Start_date", :class=>"form-control" %>
    
        </div>
    </div>
   
    <div class="form-group">
        <label class="col-ms-1 control-label">Active</label>
      <div class="col-ms-2  inputGroupContainer">
        
           <%= f.check_box :active , :class=>"form-control" %>
        </div>
    </div>
  
  <div class="form-group">
    <label class="col-ms-1 control-label">Image</label>
    <div class="col-ms-2  inputGroupContainer">
     <%= f.text_field :image_id, :class=>"form-control" %>
    </div>
  </div>
  
      <div class="form-group">
    <label class="col-ms-1 control-label">Notes</label>
    <div class="col-ms-12  inputGroupContainer">
     <%= f.cktext_area :notes, :class=>"form-control" %>
    </div>
  </div>

  <div class="form-group">
        <label class="col-ms-10 control-label"></label>
        <div class="col-ms-4">
          <%=f.submit :class=>"btn btn-success" %>
        </div>
      </div>

  
<% end %>
</div>