<p id="notice"><%= notice %></p>
<div class="country-container">
<h1>Countries</h1>

<table class="table">
  <thead>
    <tr>
      <th>Country name</th>
      <th>Country code</th>
      <th>Like</th>
      <th>DisLike</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @countries.each do |country| %>
      <tr>
        <td><%= country.country_name %></td>
        <td><%= country.country_code %></td>
         <div class="col-md-6">
         <div class="btn-group pull-right" style="">
           <td><%= link_to like_country_path(country), method: :put ,data: { :remote=> true } , :class=> "btn btn-default" do %>
            <span class="glyphicon glyphicon-thumbs-up country-up-<%=country.id%>" style='width: 50px' >
             <%= country.get_upvotes.size %> <% end %></td>
            </span>

           <td><%= link_to dislike_country_path(country), method: :put ,data: { :remote=> true } , :class=> "btn btn-default" do %>
           <span class="glyphicon glyphicon-thumbs-down country-down-<%=country.id%>" style='width: 50px'>
             <%= country.get_downvotes.size %><% end %></td>
           </span>
         </div>
       </div>

        <td><%= link_to 'Show',show_page_country_path(country),:class=>"btn btn-info",:remote => true, 'data-toggle' =>"modal",'data-target' =>'#myModal' %></td>

        <td><%= link_to 'Edit', edit_country_country_path(country),:class=>"btn btn-warning",:remote => true, 'data-toggle' =>"modal",'data-target' =>'#myModal1' %></td>

        <td><%= link_to 'Destroy', country, method: :delete, data: { confirm: 'Are you sure?' },:class=>"btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Country', new_country_path,:class=>"btn btn-success" %>
</div>

<div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog">
     <div class="modal-content">
      <div class="modal-header">
       <button type="button" class="close" data-dismiss="modal">&times;</button>
       <h4 class="modal-title">Country Info</h4>
      </div>
      <div class="modal-body">
      </div>
      <div class="modal-footer">
       <button class="btn btn-default" data-dismiss="modal" aria-hidden="true">Close</button>
      </div>
     </div>
    </div>
</div>
 
 <div class="modal fade" id="myModal1" role="dialog">
    <div class="modal-dialog">
     <div class="modal-content">
      <div class="modal-header">
       <button type="button" class="close" data-dismiss="modal">&times;</button>
       <h4 class="modal-title"> update Country Info</h4>
      </div>
      <div class="modal-body">
      </div>
      <div class="modal-footer">
       <button class="btn btn-default" data-dismiss="modal" aria-hidden="true">Close</button>
      </div>
     </div>
    </div>
</div>
