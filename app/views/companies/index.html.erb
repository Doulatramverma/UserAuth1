<p id="notice"><%= notice %></p>

<h1>Companies</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Country</th>
      <th>State</th>
      <th>City</th>
      <th>Postcode</th>
      <th>Start date</th>
      <th>Active</th>
    </tr>
  </thead>

    <% @companies.each do |company| %>
        <td><%= company.name %></td>
         <td><%= company.country_id %></td>
         <td><%= company.state_id %></td>
         <td><%= company.city_id %></td>
        <td><%= company.postcode %></td>
         <td><%= company.start_date %></td>
         <td><%= company.active %></td>
         <td><%= link_to 'Show', company,:class=>"btn btn-info" %></td>
         <td><%= link_to 'Edit', edit_company_path(company),:class=>"btn btn-warning" %></td>
         <td><%= link_to 'Destroy', company, method: :delete, data: { confirm: 'Are you sure?' },:class=>"btn btn-danger" %></td>
      </tr>
    <% end %>
</table>

