<!DOCTYPE html>
<html>
  <head>
    <title>UserAuth1</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <nav class="navbar navbar-inverse navbar-static-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#">UserAuth1</a>
        </div>
        <div id="navbar" class="navbar-collapse collapse" aria-expanded="false" style="height: 1px;">
          <ul class="nav navbar-nav">
            <li class="active"><%=link_to 'Home',companies_path%></li>
            <li><%=link_to 'User Details',managers_path %></li>
            <li><%=link_to 'Add Company',new_company_path%></li>
            
            <li><%=link_to 'Add User',new_manager_path%></li>
           <li><%=link_to 'User to Region',new_user_region_path%></li>
            <li><%=link_to 'Role Details',user_roles_path%></li>
            <li><%= link_to 'Add Region', new_region_path %></li>
            <li class="dropdown"><%= link_to "Other", "#", class: 'dropdown-toggle', data: {toggle: 'dropdown'} %>
              <ul class="dropdown-menu">
               <li><%=link_to 'Country',new_country_path%></li>
               <li><%=link_to 'State',new_state_path%></li>
               <li><%=link_to 'City',new_city_path%></li>
               <li><%=link_to 'Add Role',new_user_role_path%></li>
               <li><%=link_to 'Add Place',new_place_path%></li>
              </ul>
            </li>
            <ul class="nav navbar-nav navbar-right">
             <% unless user_signed_in? %>
               <li><a href="/users/sign_in">Login</a></li>
               <li><a href="/users/sign_up">Register</a></li>
              <% else %>
               <li><%= link_to "Sign out", destroy_user_session_path, :method => :delete %></li>
              <% end%>
            </ul>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </nav>

<br>

    <%= yield %>
    <footer class="footer">
      <div class="container">
        <p class="text-muted">Place sticky footer content here.</p>
      </div>
    </footer>
  </body>
</html>


  